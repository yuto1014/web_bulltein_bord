<div class="container">
    <div class="row">
      <div class="col-4 offset-4 post_new">
        <h2 class="text-center">新規登録</h2>
        <hr>
        <div class="test_user">
          <h4>テストユーザーいます。</h4>
          <%- if controller_name != 'sessions' %>
            <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn btn-outline-dark regiresion_login" %><br />
          <% end %>
        </div>
        <hr>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <hr>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <hr>

          <div class="field">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <hr>

          <div class="actions">
            <%= f.submit "登録",class: "btn-sm btn-danger form-control" %>
          </div>
        <% end %>
        <hr>

        <%- if controller_name != 'sessions' %>
            <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn btn-outline-dark" %><br />
          <% end %>
          <hr>
      </div>
    </div>
  </div>
